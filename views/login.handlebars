<div class="container container-fluid mt-5">
<div class="row">
  <div class="col-md-6">
    <h2 style = "font-family: Georgia, 'Times New Roman', Times, serif;">Log In</h2>

  </div>
  </div>


<form class="form login-form">
  <div class="form-group">
    <label style = "font-family: Georgia, 'Times New Roman', Times, serif;"for="email-login">Email Address</label>
    <input style = "font-family: Georgia, 'Times New Roman', Times, serif;" type="text" class="form-control form-input" id="email-login" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label style = "font-family: Georgia, 'Times New Roman', Times, serif;" for="password-login">Password</label>
    <input style = "font-family: Georgia, 'Times New Roman', Times, serif;" type="password" class="form-control form-input" id="password-login" placeholder="Password">
  </div>
  <div class="form-group">
    <button style = "font-family: Georgia, 'Times New Roman', Times, serif;" class="btn btn-primary" type="submit">Log In</button>
    <small style = "font-family: Georgia, 'Times New Roman', Times, serif;" id="emailHelp" class="form-text text-muted">Don't have an account?</small>
    <button style = "font-family: Georgia, 'Times New Roman', Times, serif;" class="btn btn-primary" onclick="window.location.href='/signup'">Sign Up</button>
  </div>
</form>
</div>


<script src="./js/login.js"></script>
